extends ../layout

block content

	link(href='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css', rel='stylesheet')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js')

	link(href='https://cdn.quilljs.com/1.3.3/quill.snow.css', rel='stylesheet')

	.page-header
		h3 Create Tournament
	.row
		.col-sm-6
			p Upload Tournament logo
			<img id="golferAvar" src="/image/simple.png" style="max-width: 300px;" alt="Mountain View">
			form(id='myFile', role='form', enctype='multipart/form-data', action='/api/upload', method='POST')
				.form-group
					label.control-label File Input
					input(type='file', name='myFile')
				//- button.btn.btn-primary(type='submit') Submit
	//- input#fileupload(type='file', name='files[]', data-url='/api/upload', multiple='')

	form.form-horizontal(id='signup-form', method='POST')
		input(type='hidden', name='_csrf', value=_csrf)
		input(type='hidden', name='logo', value='')
		input(type='hidden', name='teamArray', value='')
		input(type='hidden', id='textarea-info' ,name='info', value='')
		.form-group
			label.col-sm-3.control-label(for='name') Tên giải đấu
			.col-sm-7
				input.form-control(type='text', name='name', id='name', placeholder='Tên giải đấu', autofocus, required)
		.form-group
			label.col-sm-3.control-label(for='type') Thể loại
			.col-sm-7
				select(name='type')
					option(value='1') Giải đấu
					option(value='2') Thi đấu
		.form-group
			label.col-sm-3.control-label(for='info') Giới thiệu
			.col-sm-7
				//- input.form-control(type='text', name='info', id='info', placeholder='Thông tin giải đấu')
				#editor

		.form-group
			label.col-sm-3.control-label(for='team') Đội tham dự
			.col-sm-7
				ul.list-group.member-list
				| Thêm
				input.form-control(type='text', name='team-search', id='team', placeholder='nhập tìm kiếm...', autocomplete="off")
				ul.list-group.suggest-list
		//- .form-group
		//-   label.col-sm-3.control-label(for='member') Golfer tham gia
		//-   .col-sm-7
		//-     select.js-example-basic-multiple.col-sm-12(name='states[]', multiple='multiple')
		//-       option(value='AL') Alabama
		//-       |     ...
		//-       option(value='WY') Wyoming
		//- .form-group
		//-   .col-sm-offset-3.col-sm-7
		//-     button.btn.btn-success
		//-       i.fa.fa-user-plus
		//-       | Thêm

		.form-group
			.col-sm-12
				button.btn.btn-success(type='submit')
					i.fa.fa-plus-square-o
					| Tạo giải đấu
	script(src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js')
	script(src='https://cdn.quilljs.com/1.3.3/quill.js')
