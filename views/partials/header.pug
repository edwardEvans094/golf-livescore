.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | Project name
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title === 'API Examples') ? 'active' : undefined)
          a(href='/golfer/create') Create Golfer
        li(class=(title === 'API Examples') ? 'active' : undefined)
          a(href='/golfer/list') List Golfer
        li(class=(title === 'API Examples') ? 'active' : undefined)
          a(href='/team/create') Create Team
        li(class=(title === 'API Examples') ? 'active' : undefined)
          a(href='/team/list') List Team
        li(class=(title === 'Contact') ? 'active' : undefined)
          a(href='/tournament/create') Create Tournament
        li(class=(title === 'Contact') ? 'active' : undefined)
          a(href='/tournament/list') Tournament List
      //- ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title === 'Login') ? 'active' : undefined)
            a(href='/user/login') Login
          li(class=(title === 'Create Account') ? 'active' : undefined)
            a(href='/user/signup') Create Account
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/user/logout') Logout
