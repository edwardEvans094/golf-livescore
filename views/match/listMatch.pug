extends ../layout

block content
	h1 Hackathon Starter
	p.lead A boilerplate for Node.js web applications.
	hr
	.row
		each val, index in list
			.col-sm-6
				h2= val.name
				//- p= val.info 
				p
					a(href='/match/edit/' + val._id) Edit detail »
					a.btn.btn-default(href='/match/update-score/' + val._id, role='button') view score »
	.form-group
			.col-sm-12
				a.btn.btn-success(href='/match/create/' + tournamentId)
					i.fa.fa-plus-square-o
					| Create match